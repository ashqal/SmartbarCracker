<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionModeBackground">@drawable/tab_selected_holo</item>
    </style>

    <style name="CustomStyledIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>




    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">

        <!--<item name="android:background">@drawable/bg_tab_repeat</item>-->
        <!--<item name="android:drawableBottom">@drawable/icon_trangle</item>-->
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:height">36dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">0dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>
